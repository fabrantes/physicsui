<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/light_yellow</item>
        <item name="colorPrimaryDark">@color/some_blue</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Text.SlideTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="Text.SlideAuthor">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.SlideHeader2">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="Text.Code">
        <item name="android:fontFamily">monospace</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:background">#1000</item>
    </style>

    <style name="Text.Code.Small">
        <item name="android:textSize">9dp</item>
    </style>

    <style name="Text.SlideQuote">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="Text.SlideQuote.Small">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Text.SliderLabel">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="light_yellow">#ff9</color>
    <color name="dark_gray">#282828</color>
    <color name="some_blue">#1166aa</color>
</resources>
