<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/quotes_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/quote_hookes_law"
            style="@style/Text.SlideQuote"
            android:layout_gravity="center"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quote_hookes_law"/>

        <TextView
            android:id="@+id/quote_damping"
            style="@style/Text.SlideQuote.Small"
            android:layout_gravity="center"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quote_damping"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/equation_holder"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/left_part_of_equation"
            android:src="@drawable/left_eq"
            android:tint="?attr/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/right_part_first_member"
            android:src="@drawable/right_first_member_eq"
            android:tint="?attr/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/right_part_second_member"
            android:src="@drawable/right_second_member_eq"
            android:tint="?attr/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/spring_mass_damp_system_img"
        android:layout_width="212dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/spring_mass_damp"/>

</LinearLayout>
